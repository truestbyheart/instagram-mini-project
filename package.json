{
  "name": "ig-mini-project",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "node ./build/server.js",
    "tsc": "tsc",
    "clean": "rimraf build/*",
    "lint": "node_modules/.bin/eslint . --ext .ts --fix",
    "postinstall": "npm-run-all clean lint tsc",
    "dev": "set NODE_ENV=development && ts-node src/server.ts",
    "start:dev": "nodemon --watch ./ -e ts,pug,css,js --exec npm run dev",
    "win:dev": "nodemon --watch ./ -e ts --exec npm-run-all lint dev"
  },
  "author": "Daniel Charles Mwangila",
  "dependencies": {
    "@types/redis": "^2.8.28",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "helmet": "^3.23.3",
    "http-errors": "~1.6.3",
    "http-status": "^1.5.0",
    "morgan": "~1.9.1",
    "pug": "^3.0.0",
    "puppeteer": "^5.2.1",
    "redis": "^3.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.0",
    "@types/cheerio": "^0.22.16",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.47",
    "@types/http-errors": "^1.6.3",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.7.6",
    "@types/puppeteer": "^3.0.1",
    "@types/shelljs": "^0.8.6",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.3",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.2"
  },
  "nodemonConfig": {
    "exec": "npm run start:dev",
    "ignore": "dist/*"
  }
}
