form(method="POST" action="/link?render=true")
    div(class="form-group")
        if url
            div(class="input-group mb-3")
                div(class="input-group-prepend")
                    span(class="input-group-text" id="basic-addon1")
                        i(class="fas fa-link")
                input(type="text"
                    class="form-control"
                    placeholder="Paste link here"
                    name="link"
                    id="link"
                    value= url
                    aria-label="link"
                    aria-describedby="basic-addon1")
        else
            div(class="input-group mb-3")
                div(class="input-group-prepend")
                    span(class="input-group-text" id="basic-addon1")
                        i(class="fas fa-link")
                input(type="text"
                    class="form-control"
                    placeholder="Paste link here"
                    name="link"
                    id="link"
                    aria-label="link"
                    aria-describedby="basic-addon1")
